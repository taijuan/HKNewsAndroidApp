apply plugin: 'com.android.application'
apply plugin: 'kotlin-android'
apply plugin: 'kotlin-android-extensions'
apply plugin: 'kotlin-kapt'


android {
    compileSdkVersion rootProject.ext.sdk

    defaultConfig {
        applicationId "com.chinadaily"
        minSdkVersion 21
        versionCode 16
        versionName "3.5.5"
        multiDexEnabled true
        ndk {
            abiFilters 'x86', "armeabi"
        }
        manifestPlaceholders = [
                JPUSH_PKGNAME    : applicationId,
                JPUSH_APPKEY     : "1594ad4949ec104065fce77f",
                JPUSH_CHANNEL    : "developer-default",
        ]
        resConfig "en"
    }

    signingConfigs {
        debug {
            storeFile file("key")
            storePassword "123456"
            keyAlias "cdnkey"
            keyPassword "123456"
        }
        release {
            storeFile file("key")
            storePassword "123456"
            keyAlias "cdnkey"
            keyPassword "123456"
        }
    }

    buildTypes {
        debug {
            signingConfig signingConfigs.debug
        }

        release {
            minifyEnabled true
            shrinkResources true
            zipAlignEnabled true
            signingConfig signingConfigs.release
            proguardFiles getDefaultProguardFile('proguard-android.txt'), 'proguard-rules.pro'
            proguardFile 'proguard-rules-def.pro'
        }
        android.applicationVariants.all { variant ->
            variant.outputs.all {
                outputFileName = "${project.name}-${name}-${defaultConfig.versionName}.apk"
            }
        }
    }

    compileOptions {
        sourceCompatibility JavaVersion.VERSION_1_8
        targetCompatibility JavaVersion.VERSION_1_8
    }
}

dependencies {
    implementation fileTree(include: ['*.jar'], dir: 'libs')
    implementation("com.android.support:appcompat-v7:$support") {
        transitive = true
    }
    implementation 'com.android.support.constraint:constraint-layout:1.1.2'
    implementation("com.android.support:recyclerview-v7:$support") {
        transitive = true
    }
    implementation("com.android.support:cardview-v7:$support") {
        transitive = true
    }
    implementation("com.android.support:design:$support") {
        transitive = true
    }
    implementation 'com.alibaba:fastjson:1.1.68.android'
    implementation 'com.squareup.okhttp3:okhttp:3.10.0'
    implementation 'com.squareup.okio:okio:1.14.0'
    implementation('com.lzy.net:okgo:3.0.4') {
        transitive = true
    }
    implementation project(':ShareSDK')
    implementation 'com.lzy.net:okserver:2.0.5'
    implementation 'com.aliyun.ams:alicloud-android-hotfix:3.2.1'
    implementation 'com.github.barteksc:android-pdf-viewer:3.0.0-beta.5'
    implementation("org.jetbrains.kotlin:kotlin-stdlib-jdk7:$kotlin_version") {
        transitive = true
    }
    implementation 'com.scwang.smartrefresh:SmartRefreshLayout:1.1.0-alpha-7'
    implementation("com.github.bumptech.glide:glide:$glide_version") {
        force = true
    }
    kapt "com.github.bumptech.glide:compiler:$glide_version"
    implementation "com.github.bumptech.glide:okhttp3-integration:$glide_version"
    implementation 'org.litepal.android:core:1.6.1'
    implementation 'cn.jzvd:jiaozivideoplayer:6.2.10'
    implementation 'com.google.android.exoplayer:exoplayer-core:2.8.0'
    implementation 'com.google.android.exoplayer:extension-okhttp:2.8.0'
    implementation 'cn.jiguang.sdk:jpush:3.1.2'
    implementation 'cn.jiguang.sdk:jcore:1.2.0'
    implementation 'me.leolin:ShortcutBadger:1.1.21@aar'
    implementation 'com.tencent.sonic:sdk:3.0.0'
    implementation ('com.alibaba.android:ultraviewpager:1.0.7.7@aar') {
        transitive = true
    }
}
