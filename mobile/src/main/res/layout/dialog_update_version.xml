<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/shape_conner_white"
    android:orientation="vertical">

    <TextView
        android:id="@+id/versionName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="16dp"
        android:text="@string/discover_new_version"
        android:textColor="@color/color_161616"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/versionUpdateContent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="60dp"
        android:paddingHorizontal="16dp"
        android:text="1. Type update content\n1. Type update content\n1. Type update content"
        android:textColor="@color/color_777777"
        android:textSize="15sp" />

    <androidx.core.widget.ContentLoadingProgressBar
        android:id="@+id/progress_bar"
        style="@android:style/Widget.ProgressBar.Horizontal"
        android:layout_width="match_parent"
        android:layout_height="4dp"
        android:layout_marginHorizontal="16dp"
        android:layout_marginVertical="8dp"
        android:max="10000"
        android:progressDrawable="@drawable/progress_bar" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/color_d9d9d9" />


    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:divider="@drawable/shape_line"
        app:showDividers="middle">

        <Button
            android:id="@+id/cancel"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:background="@null"
            android:gravity="center"
            android:paddingHorizontal="12dp"
            android:text="@string/cancel"
            android:textAllCaps="false"
            android:textColor="@color/color_777777"
            android:textSize="16sp" />

        <Button
            android:id="@+id/update"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:background="@null"
            android:gravity="center"
            android:paddingHorizontal="12dp"
            android:text="@string/update"
            android:textAllCaps="false"
            android:textColor="@color/color_118ce2"
            android:textSize="16sp" />
    </androidx.appcompat.widget.LinearLayoutCompat>
</androidx.appcompat.widget.LinearLayoutCompat>